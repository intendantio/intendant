{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/intendantio/intendant/main/schemas/smartobject.package.json",
    "title": "Smartobject",
    "description": "Package on smartobject",
    "type": "object",
    "properties": {
        "name": {
            "description": "Package name",
            "type": "string"
        },
        "product": {
            "description": "Type of product",
            "type": "string",
            "enum": [
                "light",
                "sensor",
                "clock",
                "switch",
                "bridge"
            ]
        },
        "license": {
            "description": "Smartobject license",
            "type": "string"
        },
        "module": {
            "description": "Type of module",
            "type": "string",
            "enum": [
                "smartobject"
            ]
        },
        "dependencies": {
            "type": "object",
            "additionalProperties": true
        },
        "submit": {
            "type": "object",
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "description": "Type submit",
                            "type": "string",
                            "enum": [
                                "submit"
                            ]
                        },
                        "name": {
                            "description": "Submit name",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "name"
                    ]
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "description": "Type disabled",
                            "type": "string",
                            "enum": [
                                "disabled"
                            ]
                        },
                        "name": {
                            "description": "Submit name",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "name"
                    ]
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "description": "Type oAuth",
                            "type": "string",
                            "enum": [
                                "oauth"
                            ]
                        },
                        "url": {
                            "description": "oAuth entry point",
                            "type": "string"
                        },
                        "name": {
                            "description": "Submit name",
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "url",
                        "name"
                    ]
                }
            ]
        },
        "settings": {
            "type": "array",
            "uniqueItems": true
        },
        "actions": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "description": "Action id",
                        "type": "string"
                    },
                    "name": {
                        "description": "Action name",
                        "type": "string"
                    },
                    "description": {
                        "description": "Action description",
                        "type": "string"
                    },
                    "alias": {
                        "description": "Action alias",
                        "type": "string"
                    },
                    "settings": {
                        "description": "Settings action",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "id": {
                                    "description": "Setting id",
                                    "type": "string"
                                },
                                "type": {
                                    "description": "Setting type",
                                    "type": "string",
                                    "enum": [
                                        "slider",
                                        "colorpicker",
                                        "text",
                                        "number",
                                        "select"
                                    ]
                                },
                                "default": {
                                    "description": "Setting default value",
                                    "type": [
                                        "number",
                                        "string"
                                    ]
                                },
                                "options": {
                                    "description": "Setting options",
                                    "additionalProperties": true,
                                    "type": "object"
                                }
                            },
                            "required": [
                                "id",
                                "type",
                                "default",
                                "options"
                            ]
                        },
                        "uniqueItems": true
                    }
                },
                "required": [
                    "id",
                    "name",
                    "description",
                    "alias",
                    "settings"
                ]
            }
        },
        "dataSources": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "description": "Data source id",
                        "type": "string"
                    },
                    "type": {
                        "description": "Data source type",
                        "type": "string",
                        "enum": [
                            "number",
                            "string",
                            "boolean"
                        ]
                    },
                    "action": {
                        "description": "Data source action",
                        "type": "string"
                    },
                    "path": {
                        "description": "Data source path",
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "type",
                    "action",
                    "path"
                ]
            }
        },
        "widgets": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "description": "Widget id",
                        "type": "string"
                    },
                    "name": {
                        "description": "Widget name",
                        "type": "string"
                    },
                    "dataSources": {
                        "description": "Widget data sources",
                        "uniqueItems": true,
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "contents": {
                        "description": "Widget contents",
                        "uniqueItems": true,
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "type": {
                                    "description": "Content type",
                                    "type": "string",
                                    "enum": [
                                        "title",
                                        "text"
                                    ]
                                },
                                "value": {
                                    "description": "Content value",
                                    "type": "string"
                                },
                                "example": {
                                    "description": "Example value",
                                    "type": "string"
                                },
                                "style": {
                                    "type": "object",
                                    "additionalProperties": true
                                }
                            },
                            "required": [
                                "type",
                                "value",
                                "example"
                            ]
                        }
                    }
                },
                "required": [
                    "id",
                    "name",
                    "dataSources"
                ]
            }
        },
        "triggers": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "description": "Trigger id",
                        "type": "string"
                    },
                    "name": {
                        "description": "Trigger name",
                        "type": "string"
                    },
                    "type": {
                        "description": "Trigger type",
                        "type": "string",
                        "enum": [
                            "callback"
                        ]
                    }
                },
                "required": [
                    "id",
                    "name",
                    "type"
                ]
            }
        }
    },
    "required": [
        "name",
        "product",
        "license",
        "module",
        "dependencies",
        "submit",
        "settings",
        "actions",
        "dataSources",
        "widgets",
        "triggers"
    ]
}
