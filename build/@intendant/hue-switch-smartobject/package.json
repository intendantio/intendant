{
    "name": "@intendant/hue-switch-smartobject",
    "main": "./index.js",
    "author": "Cl√©ment MERLET",
    "version": "0.0.2",
    "manufacturer": "Philips Hue",
    "product": "switch",
    "tags": [
        "Philips Hue",
        "Switch",
        "Button"
    ],
    "requirements": [
        "Hue bridge"
    ],
    "models": [
        {
            "name": "Dimmer Switch v1",
            "image": "https://www.assets.signify.com/is/image/PhilipsLighting/eaadc158a4d245958a48ab8700d270dd",
            "copyright": "Signify"
        },
        {
            "name": "Dimmer Switch v2",
            "image": "https://www.assets.signify.com/is/image/PhilipsLighting/eaadc158a4d245958a48ab8700d270dd",
            "copyright": "Signify"
        },
        {
            "name": "Smart button",
            "image": "https://www.assets.signify.com/is/image/PhilipsLighting/02ef5813714b4fbd98cdac2400a9bdbb?&wid=340&hei=340&qlt=82&$jpglarge$",
            "copyright": "Signify"
        }
    ],
    "license": "apache-2.0",
    "module": "smartobject",
    "icon": "radio-outline",
    "settings": [
        {
            "id": "id",
            "type": "string",
            "name": "Switch identifiant"
        },
        {
            "id": "path",
            "type": "string",
            "name": "Hue Hub ip"
        },
        {
            "id": "apikey",
            "type": "string",
            "name": "Hue authorisation"
        }
    ],
    "actions": [
        {
            "id": "event",
            "name": "Get event",
            "description": "Get switch event",
            "settings": []
        },
        {
            "id": "configuration",
            "name": "Get configuration",
            "description": "Get switch configuration",
            "settings": []
        },
        {
            "id": "state",
            "name": "Get state",
            "description": "Get switch state",
            "settings": [
                {
                    "id": "event",
                    "type": "text",
                    "default": ""
                },
                {
                    "id": "type",
                    "type": "select",
                    "default": "info",
                    "values": [
                        "initial_press",
                        "repeat",
                        "short_release",
                        "long_release"
                    ]
                },
                {
                    "id": "duration",
                    "type": "slider",
                    "step": 1,
                    "min": 1,
                    "max": 10,
                    "default": 1
                }
            ]
        }
    ],
    "dependencies": {
        "@intendant/smartobject": "https://raw.githubusercontent.com/intendantio/intendant/main/public/intendant-smartobject-0.0.1.tgz", 
        "moment": "^2.29.1",
        "node-fetch": "^2.6.1"
    }
}
