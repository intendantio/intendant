    "module": "smartobject",
    "icon": "bulb-outline",
    "settings": [
        {
            "id": "id",
            "type": "string",
            "name": "Light identifiant"
        },
        {
            "id": "hueBridge",
            "type": "smartobject",
            "reference": "@intendant/hue-bridge-smartobject",
            "name": "Hue bridge instance"
        }
    ],
    "actions": [
        {
            "id": "state",
            "name": "Get state",
            "description": "Get state",
            "settings": []
        },
        {
            "id": "turnOff",
            "name": "Turn off light",
            "description": "Turn off light",
            "settings": [
                {
                    "id": "duration",
                    "type": "slider",
                    "step": 200,
                    "min": 200,
                    "max": 5000,
                    "default": 200
                }
            ]
        },
        {
            "id": "turnOn",
            "name": "Turn on light",
            "description": "Turn on light with color and intensity parameters",
            "settings": [
                {
                    "id": "brightness",
                    "type": "slider",
                    "step": 1,
                    "min": 1,
                    "max": 100,
                    "default": 100
                },
                {
                    "id": "duration",
                    "type": "slider",
                    "step": 200,
                    "min": 200,
                    "max": 5000,
                    "default": 200
                },
                {
                    "id": "color",
                    "type": "colorpicker",
                    "default": "#ffffff"
                }
            ]
        }
    ],
    "dependencies": {
        "@intendant/smartobject": "https://raw.githubusercontent.com/intendantio/intendant/main/public/intendant-smartobject-0.0.1.tgz",
        "chroma-js": "^2.1.2",
        "node-fetch": "^2.6.1"
    }
}
