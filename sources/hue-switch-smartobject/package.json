    "product": "switch",
    "tags": [
        "Philips Hue",
        "Switch",
        "Button"
    ],
    "state": "compatible",
    "requirements": [
        "Hue bridge"
    ],
    "models": [
        {
            "name": "Dimmer Switch v1",
            "image": "https://www.assets.signify.com/is/image/PhilipsLighting/eaadc158a4d245958a48ab8700d270dd",
            "shop": "",
            "copyright": "Signify"
        },
        {
            "name": "Dimmer Switch v2",
            "image": "https://www.assets.signify.com/is/image/PhilipsLighting/eaadc158a4d245958a48ab8700d270dd",
            "shop": "https://www.philips-hue.com/en-us/p/hue-dimmer-switch--latest-model-/046677562779",
            "copyright": "Signify"
        },
        {
            "name": "Smart button",
            "image": "https://www.assets.signify.com/is/image/PhilipsLighting/02ef5813714b4fbd98cdac2400a9bdbb?&wid=340&hei=340&qlt=82&$jpglarge$",
            "shop": "https://www.philips-hue.com/en-us/p/hue-smart-button/046677553715",
            "copyright": "Signify"
        }
    ],
    "license": "apache-2.0",
    "module": "smartobject",
    "icon": "radio-outline",
    "settings": [
        {
            "id": "id",
            "type": "string",
            "name": "Button identifiant"
        },
        {
            "id": "hueBridge",
            "type": "smartobject",
            "reference": "@intendant/hue-bridge-smartobject",
            "name": "Hue bridge instance"
        }
    ],
    "actions": [
        {
            "id": "configuration",
            "name": "Get configuration",
            "description": "Get switch configuration",
            "settings": []
        },
        {
            "id": "state",
            "name": "Get state",
            "description": "Get switch state",
            "settings": [
                {
                    "id": "type",
                    "type": "select",
                    "default": "info",
                    "values": [
                        "short",
                        "long"
                    ]
                },
                {
                    "id": "duration",
                    "type": "slider",
                    "step": 1,
                    "min": 1,
                    "max": 10,
                    "default": 1
                }
            ]
        }
    ],
    "dependencies": {
        "@intendant/smartobject": "https://raw.githubusercontent.com/intendantio/intendant/main/public/intendant-smartobject-0.0.1.tgz", 
        "moment": "^2.29.1",
        "node-fetch": "^2.6.1"
    }
}
