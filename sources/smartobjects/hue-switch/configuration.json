{
    "id": "@intendant/hue-switch-smartobject",
    "name": "hue-switch-smartobject",
    "type": "smartobject",
    "icon": "radio-outline",
    "settings": [
        {
            "id": "id",
            "type": "string",
            "name": "Switch identifiant"
        },
        {
            "id": "path",
            "type": "string",
            "name": "Hue Hub ip"
        },
        {
            "id": "apikey",
            "type": "string",
            "name": "Hue authorisation"
        }
    ],
    "actions": [
        {
            "id": "getState",
            "name": "Get state",
            "description": "Get switch state",
            "settings": []
        },
        {
            "id": "getConfiguration",
            "name": "Get configuration",
            "description": "Get switch configuration",
            "settings": []
        },
        {
            "id": "subscribeEvent",
            "name": "Subscribe event",
            "description": "Subscribe an event",
            "settings": [
                {
                    "id": "id",
                    "type": "text",
                    "default": ""
                },
                {
                    "id": "duration",
                    "type": "slider",
                    "step": 1,
                    "min": 1,
                    "max": 60,
                    "default": 1
                },{
                    "id": "event",
                    "type": "number",
                    "default": 1000
                }
            ]
        },
        {
            "id": "readEvent",
            "name": "Read event",
            "description": "Read event with update option",
            "settings": [
                {
                    "id": "id",
                    "type": "text",
                    "default": ""
                },
                {
                    "id": "withUpdate",
                    "type": "checkbox",
                    "default": true
                }
            ]
        }
    ]
}